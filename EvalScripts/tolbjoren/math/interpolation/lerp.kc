}*/

lerp2(x1,y1,x2,y2,nx,&ny){
   ny = y1+(nx-x1)*(y2-y1)/(x2-x1);
}
drawrectopen(x0,y0,x1,y1) { moveto(x0,y0); lineto(x1,y0); lineto(x1,y1); lineto(x0,y1); lineto(x0,y0); }
drawrectfill(x0,y0,x1,y1) { for(y=y0;y<y1;y++) { moveto(x0,y); lineto(x1,y); } }


drawTriangle(x,y,size,degrees)
{
   scal = PI/180;
   ang1 = degrees/180*PI;
   ang2 = ang1+2*PI/3;
   ang3 = ang1-2*PI/3;
   v1x = x+sin(ang1)*size;
   v1y = y+cos(ang1)*size;
   
   v2x = x+sin(ang2)*size;
   v2y = y+cos(ang2)*size;
   
   v3x = x+sin(ang3)*size;
   v3y = y+cos(ang3)*size;
   moveto(v1x, v1y);
   lineto(v2x, v2y);
   lineto(v3x, v3y);
   moveto(v3x, v3y);
   lineto(v1x, v1y); 
}

star(x,y,siz){
   for(i=0; i<siz; i++){
      for(j=0; j<4; j++)
      {
         //setcol( (j+4)*255/8,j*255/4,0);
         drawTriangle(x,y,i,j*30);
      }
   }
}