      py = lerp(ypos1,ypos2,t);//ypos1+lerp(ypos1,ypos2,t);

      drawsph(px,py,-10);   
   }

   setcol(0xff0000);   
   steps = 10;

   stepSiz = (xpos2-xpos1)/(steps-1);   

   for(i=0; i<steps; i++){
      nx = xpos1 + i*stepSiz;
      ny = 0;               
      lerp2(xpos1,ypos1,xpos2,ypos2,nx,ny);
      drawsph(nx,ny,-15);
   }
   
